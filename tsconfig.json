{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "declaration": false,
        "module": "commonjs",
        "noImplicitAny": false,
        "noLib": false,
        "rootDir": ".",
        "sourceMap": true,
        "sourceRoot": ".",
        "target": "es5",
        "outDir": "./dist"
    },
    "filesGlob": [
        "./lib/**/*.ts",
        "./typings/**/*.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts"
    ],
    "compileOnSave": true,
    "files": [
        "./lib/index.ts",
        "./lib/rfp.ts",
        "./lib/spec.ts",
        "./lib/specGenerator.ts",
        "./lib/split.ts",
        "./typings/es6/es6.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts",
        "./node_modules/typescript-schema/typescript-schema.d.ts"
    ]
}
